<div class='container mx-auto p-5 my-5 bg-dark text-light'>
  <h2 class='text-center font-italic'>新增餐廳</h2>
  <div class='p-3 mt-3'>
    <form
      action='/restaurants/new/restaurant'
      method='POST'
      class='font-weight-light'
    >
      <div class='form-group row'>
        <label for='name' class='col-sm-2 col-form-label'>餐廳名稱
          <small><i
              class='fas fa-solid fa-star text-danger'
            ></i></small></label>
        <div class='col-sm-10'>
          <input
            type='name'
            name='name'
            class='form-control'
            id='name'
            placeholder='中文名稱'
            required
          />
        </div>
      </div>
      <div class='form-group row'>
        <label for='name_en' class='col-sm-2 col-form-label'>餐廳英文名稱
          <small><i
              class='fas fa-solid fa-star text-danger'
            ></i></small></label>
        <div class='col-sm-10'>
          <input
            type='name'
            name='name_en'
            class='form-control'
            id='name_en'
            placeholder='英文名稱'
            required
          />
        </div>
      </div>
      <div class='form-group row'>
        <label for='id' class='col-sm-2 col-form-label'>餐廳編號</label>
        <div class='col-sm-5'>
          <input
            type='number'
            name='id'
            class='form-control'
            id='id'
            min='1'
            step='1'
            placeholder='餐廳編號'
          />
        </div>
      </div>
      <div class='form-group row'>
        <label for='category' class='col-sm-2 col-form-label'>餐廳類別
          <small><i
              class='fas fa-solid fa-star text-danger'
            ></i></small></label>
        <div class='col-sm-10'>
          <input
            type='text'
            name='category'
            class='form-control'
            id='category'
            placeholder='日本料理、港式料理'
            required
          />
        </div>
      </div>
      <div class='form-group row'>
        <label for='image' class='col-sm-2 col-form-label'>餐廳照片網址</label>
        <div class='col-sm-10'>
          <input
            type='text'
            name='image'
            class='form-control'
            id='image'
            placeholder='https://media.istockphoto.com/id/1211547141/es/foto/dise%C3%B1o-interior-de-restaurante-moderno.jpg?s=2048x2048&w=is&k=20&c=JaVMe0hCh0nRWKGXablWyFvUkzLhM-ZeU1by7-LdXWM='
          />
        </div>
      </div>
      <div class='form-group row'>
        <label for='location' class='col-sm-2 col-form-label'>餐廳地點</label>
        <div class='col-sm-10'>
          <input
            type='text'
            name='location'
            class='form-control'
            id='location'
            placeholder='新增地點'
          />
        </div>
      </div>
      <div class='form-group row'>
        <label for='phone' class='col-sm-2 col-form-label'>餐廳電話</label>
        <div class='col-sm-10'>
          <input
            type='text'
            name='phone'
            class='form-control'
            id='phone'
            placeholder='輸入餐廳的連絡電話'
          />
        </div>
      </div>
      <div class='form-group row'>
        <label
          for='google_map'
          class='col-sm-2 col-form-label'
        >Google_Map</label>
        <div class='col-sm-10'>
          <input
            type='text'
            name='google_map'
            class='form-control'
            id='google_map'
            placeholder=''
          />
        </div>
      </div>
      <div class='form-group row'>
        <label for='rating' class='col-sm-2 col-form-label'>餐廳評分
          <small><i
              class='fas fa-solid fa-star text-danger'
            ></i></small></label>
        <div class='col-sm-5'>
          <input
            type='number'
            name='rating'
            class='form-control'
            id='rating'
            min='0'
            max='5'
            step='0.1'
            placeholder='4.5'
            required
          />
        </div>
      </div>
      <div class='form-group row'>
        <label
          for='description'
          class='col-sm-2 col-form-label'
        >餐廳簡介</label>
        <div class='col-sm-10'>
          <textarea
            name='description'
            id='description'
            cols='48'
            rows='3'
          ></textarea>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col-sm-10'>
          <button
            type='submit'
            class='btn btn-primary'
            id='createItem'
          >提交</button>
        </div>
      </div>

    </form>
  </div>
</div>